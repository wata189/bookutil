{
  "name": "ToBookutil",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Amazon, カーリルからBookutilへの連携",
  "background": {
    "matches": [
      "https://www.amazon.co.jp/dp/*",
      "https://calil.jp/book/*"
    ],
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}