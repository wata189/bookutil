{
  "name": "ToBookutil",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Amazon, カーリルからBookutilへの連携",
  "background": {
    "matches": [
      "https://www.amazon.co.jp/dp/*",
      "https://calil.jp/book/*"
    ],
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.co.jp/dp/*",
        "https://calil.jp/book/*"
      ],
      "run_at":"document_start",
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs",
    "runtime"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}